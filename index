<body>
    <div class="particles" id="particles"></div>
    <div class="quiz-container">
        <div class="progress">
            <div class="progress-bar" id="progress-bar"></div>
        </div>
        <div id="quiz-content">
            <!-- Questions will be dynamically loaded here -->
        </div>
    </div>
    <audio id="click-sound" src="https://www.soundjay.com/misc/sounds/bell-ringing-05.wav"></audio> <!-- Placeholder sound; replace with your MP3 -->
    <audio id="bg-music" loop src="https://www.soundjay.com/misc/sounds/looping-music-01.wav"></audio> <!-- Placeholder background music; replace with your MP3 -->

    <script>
        const quizContent = document.getElementById('quiz-content');
        const clickSound = document.getElementById('click-sound');
        const bgMusic = document.getElementById('bg-music');
        const progressBar = document.getElementById('progress-bar');
        const particlesContainer = document.getElementById('particles');

        // Start background music
        bgMusic.volume = 0.3;
        bgMusic.play();

        // Create floating particles
        for (let i = 0; i < 20; i++) {
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.width = Math.random() * 10 + 5 + 'px';
            particle.style.height = particle.style.width;
            particle.style.animationDelay = Math.random() * 6 + 's';
            particlesContainer.appendChild(particle);
        }

        const questions = [
            {
                question: "kyaa haal??",
                options: ["bhadiya", "ghatiya"],
                next: 1
            },
            {
                question: "kitna padh liya?",
                options: ["poora", "aukaat se jyaada"],
                next: 2
            },
            {
                question: "abki baar har subject me kitne aaynge?",
                options: ["90+", "95+"],
                next: 3
            },
            {
                question: "parso jaayega ??",
                options: ["haa", "naa"],
                next: 4 // Always goes to the same next regardless of choice
            },
            {
                question: "tu mana nhi kar sakta. BB ne kaha hai aana hai. ab bata aayega?..",
                options: ["haa", "haa"], // Both options are "haa"
                next: 5
            },
            {
                question: "sunday ko ptm me aayega??",
                options: ["haa", "naa"],
                next: 6
            }
        ];

        let currentQuestionIndex = 0;

        function loadQuestion(index) {
            const q = questions[index];
            quizContent.innerHTML = `
                <div class="question">${q.question}</div>
                <div class="options">
                    ${q.options.map((option, i) => `<button class="option" onclick="selectOption(${i})">${option}</button>`).join('')}
                </div>
            `;
            // Update progress
            progressBar.style.width = ((index + 1) / questions.length) * 100 + '%';
        }

        function selectOption(optionIndex) {
            clickSound.play(); // Play click sound
            // Animate out current content
            quizContent.style.animation = 'fadeOut 0.5s ease-in-out';
            setTimeout(() => {
                currentQuestionIndex = questions[currentQuestionIndex].next;
                if (currentQuestionIndex < questions.length) {
                    loadQuestion(currentQuestionIndex);
                } else {
                    showEndMessage();
                }
            }, 500);
        }

        function showEndMessage() {
            quizContent.innerHTML = `<div class="end-message">chal baaki baat baadme karunga bye</div>`;
            progressBar.style.width = '100%';
        }

        // Add fadeOut animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeOut {
                from { opacity: 1; transform: translateY(0); }
                to { opacity: 0; transform: translateY(20px); }
            }
        `;
        document.head.appendChild(style);

        // Start the quiz
        loadQuestion(0);
    </script>
</body>
</html>
